<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <title>Document</title>
</head>

<body class="bg-dark">
  <h1 class="display-4 btn-secondary">Reserved Seats</h1>
  <a href="/admin/addseats" class="btn btn-sm btn-success">Add Seats</a>
  <br>
  <br>
  <table class="table table-dark table-striped">
      <thead>
        <tr>
          <th>rid</th>
          <th>uid</th>
          <th>sid</th>
          <th>date</th>
        </tr>
      </thead>
      <tbody>
      <% if ( seat.length> 0){ %>
        <% for ( let i=0 ; i < seat.length ; i++ ) { %>
          <tr>
            <td>
              <%-seat[i].rid %>
            </td>
            <td>
              <%-seat[i].uid %>
            </td>
            <td>
              <%-seat[i].sid %>
            </td>
            <td>
              <%-seat[i].date %>
            </td>
            <td>
              <a href="/admin/deleteseats/<%-seat[i].rid%>" class="btn btn-sm btn-danger">delete</a>
            </td>
          </tr>
              
              
              <% } %>
                <% } else { %>
                  <h2> data not found </h2>
                  <% } %>
 
                </tbody>
  </table>
  <div class="form-outline form-white mb-4">
    <a href="./admin" class="btn btn-outline-light btn-lg px-5">admin</a>
    </div>
</body>

</html>