<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <title>Document</title>
</head>

<body class="bg-dark">
  <h1 class="display-4 btn-secondary">Add User</h1>
      <a href="/admin/addcustomers" class="btn btn-sm btn-success">Add User</a>
  

  <table class="table table-dark table-striped">
    <thead>
      <tr>
        <th>uid</th>
        <th>name</th>
        <th>email</th>
        <th>password</th>
        <th>action</th>
      </tr>
    </thead>
    <tbody>

      <% if ( customer.length> 0){ %>
        <% for ( let i=0 ; i < customer.length ; i++ ) { %>
          <tr>
            <td>
              <%-customer[i].uid %>
            </td>
            <td>
              <%-customer[i].name %>
            </td>
            <td>
              <%-customer[i].email %>
            </td>
            <td>
              <%-customer[i].password %>
            </td>
            <td>
              <a href="/admin/editcustomers/<%-customer[i].uid%>" class="btn btn-sm btn-success">Edit</a>
              <a href="/admin/deletecustomers/<%-customer[i].uid%>" class="btn btn-sm btn-danger">Delete</a>
            </td>
          </tr>
         

          <% } %>
            <% } else { %>
              <h2> data not found </h2>
              <% } %>

    </tbody>
  </table>
  <div class="form-outline form-white mb-4">
    <a href="./admin" class="btn btn-outline-light btn-lg px-5">admin</a>
    </div>





</body>

</html>